{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scan Result Response",
  "description": "Schema para respuestas del servidor a eventos de lectura QR",
  "type": "object",
  "required": ["type", "status", "message"],
  "properties": {
    "type": {
      "type": "string",
      "const": "scan_result",
      "description": "Tipo de respuesta"
    },
    "request_id": {
      "type": "string",
      "description": "ID de la solicitud original"
    },
    "status": {
      "type": "string",
      "enum": ["success", "error", "warning"],
      "description": "Estado del resultado"
    },
    "message": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "description": "Mensaje descriptivo del resultado"
    },
    "led_action": {
      "type": "string",
      "enum": ["success", "error", "warning", "info"],
      "description": "Acción de LED a ejecutar en el dispositivo"
    },
    "data": {
      "type": "object",
      "description": "Datos adicionales de la respuesta",
      "properties": {
        "user_name": {
          "type": "string",
          "description": "Nombre del usuario asociado al QR"
        },
        "access_granted": {
          "type": "boolean",
          "description": "Si se concede acceso"
        },
        "valid_until": {
          "type": "integer",
          "description": "Unix timestamp de validez"
        },
        "additional_info": {
          "type": "object",
          "description": "Información adicional variable"
        }
      }
    },
    "commands": {
      "type": "array",
      "description": "Comandos opcionales para el dispositivo",
      "items": {
        "type": "object",
        "required": ["action"],
        "properties": {
          "action": {
            "type": "string",
            "enum": ["restart", "update_firmware", "change_config", "beep"],
            "description": "Acción a ejecutar"
          },
          "parameters": {
            "type": "object",
            "description": "Parámetros de la acción"
          }
        }
      }
    },
    "timestamp": {
      "type": "integer",
      "minimum": 1000000000,
      "description": "Unix timestamp de la respuesta"
    }
  }
}
